<section class="vh-100 mt-5">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5 ">
                            <h2 class="text-uppercase text-center mb-5">List Your Rooms</h2>

                            <form action="/vendor/add" method="post" id="addrooms" enctype="multipart/form-data">

                                <div class="form-outline mb-4">

                                    <input type="text" name="vprice" placeholder="Price" id="form3Example1cg"
                                        class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1cg"></label>
                                </div>
                                <div class="form-outline mb-4">

                                    <input type="text" name="voffer" placeholder="Offer%" id="form3Example1cg"
                                        class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1cg"></label>
                                </div>

                                <div class="form-outline mb-4">

                                    <select  class="form-select" name="vcategory"  id="inputGroupSelect02">
                                        <option  selected>Category</option>
                                        <option  >Delex</option>
                                        <option  >Suite</option>
                                        <option  >King</option>
                                    </select>
                                    <label class="form-label" for="form3Example1cg"></label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="vnrooms" placeholder="Number of rooms" id="form3Example3cg"
                                        class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example3cg"></label>
                                </div>

                                <div class="form-check form-switch  ms-3 ">
                                    <input name="ac" class="form-check-input " type="checkbox" id="flexSwitchCheckChecked" checked>
                                    <label class="form-check-label" for="flexSwitchCheckChecked"> Ac
                                        </label>
                                </div>

                                <div class="form-check form-switch  ms-3 ">
                                    <input name="wifi" class="form-check-input " type="checkbox" id="flexSwitchCheckChecked" checked>
                                    <label class="form-check-label" for="flexSwitchCheckChecked"> Free Wifi
                                        </label>
                                </div>

                                <div class="form-check form-switch  ms-3 ">
                                    <input name="powerbackup" class="form-check-input " type="checkbox" id="flexSwitchCheckChecked" checked>
                                    <label class="form-check-label" for="flexSwitchCheckChecked"> Power backup
                                        </label>
                                </div>

                                <div class="form-check form-switch form-outline mb-4 ms-3 ">
                                    <input name="parking" class="form-check-input " type="checkbox" id="flexSwitchCheckChecked" checked>
                                    <label class="form-check-label" for="flexSwitchCheckChecked"> Parking
                                        </label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="file" name="imageone" multiple="multiple" placeholder="Upload image"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="file" name="imagetwo" multiple="multiple" placeholder="Upload image"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="file" name="imagethree" multiple="multiple" placeholder="Upload image"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="country" placeholder="Country"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>


                                <div class="form-outline mb-4">
                                    <input type="text" name="state" placeholder="State"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="district" placeholder="District"
                                        id="txtConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg"></label>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <button type="submit"  value="submit"
                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Add</button>
                                </div>


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



